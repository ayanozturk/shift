{% extends 'base.html.twig' %}

{% block title %}Shift Manager{% endblock %}


{% block body %}
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper col-lg-4">
        <div class="animate form login_form">
            <section class="login_content">
                <form method="post">
                    <h1>Login</h1>
                    <div>
                        <label for="_username">Email:</label>
                        <input type="email" id="_username" name="_username" class="form-control" placeholder="Email" required="" value="{{ last_username }}" />
                    </div>
                    <div>
                        <label for="_password">Password:</label>
                        <input type="password" id="_password" name="_password" class="form-control" placeholder="Password" required="" />
                    </div>

                    <div>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>


                    <div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-primary" type="submit">
                            Log in
                        </button>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <hr />
    <h2>Don't have a account yet?</h2>
    <a class="btn btn-secondary" href="{{ url('create-account') }}">Create Account</a>
</div>
{% endblock %}