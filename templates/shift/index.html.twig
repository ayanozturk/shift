{% extends 'innerBase.html.twig' %}

{% block stylesheets %}
    <style>
        .user {
            border: 1px solid black;
        }
        .dropped {
            border: 1px solid black;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="page-title col-lg-12">
                <div class="title_left">
                    <h2>Shifts</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                {% for shift in shifts %}
                    <div class="shift col-lg-12">
                        <a href="{{ path('shift-detail', {'id': shift.id}) }}">
                            {{ shift.startDate|date('Y-m-d H:i') }} - {{ shift.endDate|date('H:i') }}
                        </a>
                    </div>
                {% endfor %}
                <div class="dropzone col-lg-12" style="height: 50px;"></div>
            </div>
        </div>

        <div class="clearfix"></div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $( function() {
            $( ".user" ).draggable({
                snap: ".shift",
                helper: "clone",
                connectToSortable: ".dropzone",
            });
            $( ".dropzone" ).sortable({
                revert: true
            });
        } );
    </script>
{% endblock %}
